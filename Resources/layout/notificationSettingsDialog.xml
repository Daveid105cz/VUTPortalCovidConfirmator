<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Zobrazovat periodickou notifikaci"
        android:id="@+id/notificationEnabledCheckBox"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationEnabledCheckBox"
        android:layout_centerHorizontal="true"
        android:id="@+id/daysTextView"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        android:text="Dny kdy se má notifikace zobrazovat:"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/daysTextView"
        android:id="@+id/checkboxesLayout">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Po"
            android:id="@+id/cb1"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Út"
            android:id="@+id/cb2"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="St"
            android:id="@+id/cb3"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Čt"
            android:id="@+id/cb4"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Pá"
            android:id="@+id/cb5"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxesLayout"
        android:layout_centerHorizontal="true"
        android:id="@+id/timeSelectTextView"
        android:layout_marginLeft="5dp"
        android:textSize="14dp"
        android:textColor="@android:color/black"
        android:text="Čas zobrazení:"/>
    <TimePicker
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/timeSelectTextView"
        android:layout_centerHorizontal="true"
        android:timePickerMode="spinner"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/timePicker1"
        android:layout_marginLeft="6dp"
        android:src="@drawable/baseline_info_24"
        android:id="@+id/infoIconImageView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/infoIconImageView"
        android:layout_toRightOf="@id/infoIconImageView"
        android:paddingRight="6dp"
        android:paddingVertical="2dp"
        android:id="@+id/notificationsInfoTextView"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"
        android:text="Notifikace se nemusí vždy zobrazit přesně na čas. Může se spozdit až o několik minut"/>
</RelativeLayout>
